{
  "name": "bridge",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "dev": "npm run build && concurrently -i -k -n 'bridge,tsc' -c 'green,cyan' 'nodemon' 'nodemon --config ../../config/nodemon.server.tsc.json'",
    "lint": "eslint ./src --ext .ts --env node",
    "clean": "rimraf ./lib ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "start": "node ./lib/index.js",
    "purge": "npm run clean && rimraf ./coverage ./node_modules"
  },
  "nodemonConfig": {
    "exec": "ts-node ./src/index.ts --files",
    "delay": "1000",
    "ext": "ts,json",
    "ignore": [
      "./src/jest",
      "./src/**/*.test.ts",
      "./src/**/__mocks__"
    ],
    "watch": [
      ".env",
      "./package.json",
      "./src",
      "./tsconfig.build.json",
      "../../config/tsconfig.node.json"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bufferutil": "^4.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "helmet": "^3.22.1",
    "jsonwebtoken": "^8.5.1",
    "logform": "^2.2.0",
    "ua-parser-js": "^0.7.21",
    "utf-8-validate": "^5.0.2",
    "winston": "^3.3.3",
    "wrtc": "^0.4.6",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/express": "4.17.6",
    "@types/helmet": "^0.0.47",
    "@types/jest": "24.0.18",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^12.7.8",
    "@types/ua-parser-js": "^0.7.33",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.9.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "24.9.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.10.1",
    "typescript": "~3.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  }
}
